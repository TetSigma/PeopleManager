<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    tools:context=".ListPeopleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"> <!-- Reduced padding for compact layout -->

        <!-- First Name Label -->
        <TextView
            android:id="@+id/firstNameLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imie:"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <!-- First Name Value -->
        <TextView
            android:id="@+id/firstNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John"
            android:textSize="16sp"
            android:layout_toEndOf="@id/firstNameLabelTextView"
            android:layout_alignBaseline="@id/firstNameLabelTextView"
            android:layout_marginStart="8dp"
            android:layout_alignParentTop="true"/>

        <!-- Last Name Label -->
        <TextView
            android:id="@+id/lastNameLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwisko:"
            android:textSize="16sp"
            android:layout_below="@id/firstNameTextView"
            android:layout_marginTop="4dp"
            android:layout_alignParentStart="true"/>

        <!-- Last Name Value -->
        <TextView
            android:id="@+id/lastNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doe"
            android:textSize="16sp"
            android:layout_toEndOf="@id/lastNameLabelTextView"
            android:layout_alignBaseline="@id/lastNameLabelTextView"
            android:layout_marginStart="8dp"
            android:layout_alignParentTop="true"/>

        <!-- Age Label -->
        <TextView
            android:id="@+id/ageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wiek: 25"
            android:textSize="16sp"
            android:layout_below="@id/lastNameTextView"
            android:layout_marginTop="4dp"/> <!-- Reduced margin for tighter spacing -->

        <!-- Height Label -->
        <TextView
            android:id="@+id/heightTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wzrost: 180 cm"
            android:textSize="16sp"
            android:layout_below="@id/ageTextView"
            android:layout_marginTop="4dp"/>

        <!-- Weight Label -->
        <TextView
            android:id="@+id/weightTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waga: 75 kg"
            android:textSize="16sp"
            android:layout_below="@id/heightTextView"
            android:layout_marginTop="4dp"/>

        <!-- Delete Button positioned at bottom right -->
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usun"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>

